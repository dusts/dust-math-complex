<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    android:minWidth="25px"
    android:minHeight="25px">

    <TextView
        android:layout_width="85.0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15px"
        android:layout_marginTop="15px"
        android:text="@string/calc_real_part"
        android:id="@+id/textView1"
        android:layout_marginBottom="17.0dp" />
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:id="@+id/realNumber"
        android:inputType="numberDecimal|numberSigned" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="41.5dp"
        android:layout_marginLeft="15px"
        android:layout_marginTop="15px"
        android:layout_below="@+id/realNumber"
        android:text="@string/calc_imaginary_part"
        android:id="@+id/textView2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:id="@+id/imaginaryNumber"
        android:inputType="numberDecimal|numberSigned" />
    <Button
        android:id="@+id/doMath"
        android:text="@string/calc_do_math"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imaginaryNumber">
    </Button>
    
    <TextView
        android:layout_width="85.0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginTop="15px"
        android:layout_below="@+id/doMath"
        android:text="@string/calc_algebric"
        android:id="@+id/textView3"
        android:layout_marginBottom="17.0dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:id="@+id/resultAlgebric"
        android:inputType="numberDecimal|numberSigned"
        android:enabled="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="41.5dp"
        android:layout_marginLeft="15px"
        android:layout_marginTop="15px"
        android:layout_below="@+id/resultAlgebric"
        android:text="@string/calc_exponentional"
        android:id="@+id/textView4"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:id="@+id/resultExponentional"
        android:inputType="numberDecimal|numberSigned"
        android:enabled="false"/>
    
    <Button
        android:id="@+id/clear"
        android:text="@string/calc_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultExponentional">
    </Button>

    
</RelativeLayout>
